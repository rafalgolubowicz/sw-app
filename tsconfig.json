{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2018",
    "sourceMap": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "paths": {
      "@sw-app/backend/*": ["packages/backend/src/*"],
      "@sw-app/frontend/*": ["packages/frontend/src/*"]
    }
  },
  "references": [
    {
      "path": "packages/frontend"
    },
    {
      "path": "packages/backend"
    }
  ],
  "exclude": ["node_modules", "dist", "*.d.ts"]
}
